<h3>{{viewTitle}}</h3>


<form action="/payment" method="POST" autocomplete="off">

    <input type="hidden" name="_id" value="{{payment._id}}">

    {{!-- inicio do formulario --}}
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" pattern="^[a-zA-Z0-9_ ]{5,100}$" title = "Title must have between 5 and 100 characters." name="title" placeholder="Title" value="{{payment.title}}">
        <div class="text-danger">
            {{!-- mensagem de erro (caso haja) --}}
        {{payment.titleError}}</div>
    </div>

    <div class="form-group">
        <label>Value</label>
        <input type="double" class="form-control" pattern="^[0-9]*(\.[0-9]{1,2})$" title = "Value must be a decimal value." name="value" placeholder="Value" value="{{payment.value}}">
        <div class="text-danger">
            {{!-- mensagem de erro (caso haja) --}}
        {{payment.valueError}}</div>
    </div>

    <div class="form-row">


        <div class="form-group col-md-6">
            <label>Date</label>
            <input type="number" class="form-control" name="date" pattern="([12]\d{3}(0[1-9]|1[0-2])(0[1-9]|[12]\d|3[01]))" title = "Date must be on the pattern Y-m-d (year-month-day)." placeholder="Date" value="{{payment.date}}">
                    <div class="text-danger">
                        {{!-- mensagem de erro (caso haja) --}}
            {{payment.dateError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>External Tax</label>
            <input type="number" disabled="disabled" class="form-control" name="externalTax" placeholder="5% of the Value" value="{{payment.externalTax}}">
        </div>
    

    </div>

    <div class="form-group">
        <label>Comments</label>
        <textarea type="text" class="form-control" name="comments" placeholder="Comments" value="{{payment.comments}}"></textarea>
        <div class="text-danger">
    </div>

    {{!-- botoes de redirecionamento --}}
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/payment/list"><i class="fa fa-list-alt"></i> View All</a>
        <a class="btn btn-secondary" href="/payment/upload"><i class="fa fa-list-alt"></i> Upload File</a>
    </div>

</form>

