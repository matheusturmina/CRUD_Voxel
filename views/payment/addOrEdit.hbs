<h3>{{viewTitle}}</h3>


<form action="/payment" method="POST" autocomplete="off">

    <input type="hidden" name="_id" value="{{payment._id}}">

    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="title" placeholder="Title" value="{{payment.title}}">
        <div class="text-danger">
        {{payment.titleError}}</div>
    </div>

    <div class="form-group">
        <label>Value</label>
        <input type="double" class="form-control" name="value" placeholder="Value" value="{{payment.value}}">
        <div class="text-danger">
        {{payment.valueError}}</div>
    </div>

    <div class="form-row">


        <div class="form-group col-md-6">
            <label>Date</label>
            <input type="number" class="form-control" name="date" placeholder="Date" value="{{payment.date}}">
                    <div class="text-danger">
            {{payment.dateError}}</div>
        </div>

        <div class="form-group col-md-6">
            <label>External Tax</label>
            <input type="number" disabled="disabled" class="form-control" name="externalTax" placeholder="5% of the Value" value="{{payment.externalTax}}">
        </div>
    

    </div>

    <div class="form-group">
        <label>Comments</label>
        <textarea type="text" class="form-control" name="comments" placeholder="Comments" value="{{payment.comments}}"></textarea>
        <div class="text-danger">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/payment/list"><i class="fa fa-list-alt"></i> View All</a>
        <a class="btn btn-secondary" href="/payment/upload"><i class="fa fa-list-alt"></i> Upload File</a>
    </div>

</form>

